<?php
if (!defined('BASEPATH'))
	exit('No direct script access allowed');
class Ranking extends CI_Controller {

	public function readRanking() {
		$result = $this -> user_model -> readScore($playername);
		return result;
	}
	
	public function writeRanking() {
		$ranking = readRanking();
		foreach ($ranking as $rank) {
			var_dump($rank);
		}
	}
}
?>